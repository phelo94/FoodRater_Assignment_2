<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here.  DarkActionBar-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="exampleToast">
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:textColor">#D2691E</item>
        <item name="iconLeft">@drawable/fastfood</item>
        <item name="android:strokeColor">#000</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:width">20dp</item>
    </style>





    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>